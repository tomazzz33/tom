load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_test")

licenses(["notice"])

package(
    default_visibility = ["//:__subpackages__"],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    deps = ["//internal/checktools"],
)

go_test(
    name = "main_test",
    size = "small",
    srcs = ["main_test.go"],
    embed = [":main"],
    local = 1,
    rundir = ".",
    deps = ["//internal/checktools"],
)
